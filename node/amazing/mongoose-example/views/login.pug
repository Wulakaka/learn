extends layout
block body
    form(action="/login", method="POST")
        fieldset
            legend Log in
            p
                label Email
                input(name="user[email]", type="text", value=signupEmail)
            p
                label Password
                input(name="user[password]", type="password")
            if (signupEmail)
                p Congratulations on signing up! Please login below.
            p
                button Submit
            p
                a(href="/") Go Back